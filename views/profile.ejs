<!doctype html>
<html>
<head>
    <title>Scrambled</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center jumbotron">
        <h1>Welcome Young Scrambler</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <!-- button connected to get -->
        <a href="/playPage" class="btn btn-default btn-sm">Lets Unscramble!</a>
    </div>

    <div class="proSect">

        <!-- LOCAL INFORMATION -->
        
        <div class="jumbotron">
            
          <h3>Your Scrambles</h3>
          <ul class="messages">
          <% for(var i=0; i<results.length; i++) {%>
            <li class="message" data-objectId="<%= results[i]._id %>">
              <span>Scrambled: <span class="scramW"><%= results[i].sWord %></span> |</span>
              <!-- completed word -->
              <span>Unscrambled: <span class="scramW"><%= results[i].cWord %></span> |</span>
              <!-- Input word -->
              <span>Your Guess: <span class="scramW"><%= results[i].iWord %></span></span>

              <% if(results[i].heart === true) { %>
                <span><i class="fa fa-heart heart-red" data-heart="true" aria-hidden="true"></i></span>
              <% } else { %>
                  <span><i class="fa fa-heart heart-black" data-heart="false" aria-hidden="true"></i></span>
              <% } %>

              <% if(results[i].cWord == results[i].iWord){ %>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <% }else{ %>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <% } %>
              <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          

          

</div>

<script src="main.js"></script>

</body>
</html>
